{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "app/services/*"
      ],
      "@model/*": [
        "app/model/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],
      "@routeguards/*": [
        "app/route-guards/*"
      ],
      "@environment/*": [
        "environments/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
